<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <!--FF5E00FF
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:statusBarColor">#CE93D8</item>
        <item name="android:navigationBarColor">#7B1FA2</item>


    </style>

    <style name="AppBaseTheme2" parent="@android:style/Theme.DeviceDefault.Light">
        <!--FF5E00FF
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:statusBarColor">#006064</item>
        <item name="android:navigationBarColor">#0097A7</item>
    </style>

    <style name="AppBaseThemeAbout" parent="@android:style/Theme.DeviceDefault.Light">
        <!--FF5E00FF
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:statusBarColor">#4A148C</item>
        <item name="android:navigationBarColor">#9C27B0</item>
    </style>
    <!-- Application theme. -->


    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
